alias half-cpu="numactl --physcpubind=0-7"
alias pacman-rm="sudo pacman -Runs"
alias pacman-my="pacman -Qe"
alias pacman-upgrade="half-cpu sudo pacman -Syu --noconfirm"
alias yay-upgrade="half-cpu yay -Syu"
alias upgrade="pacman-upgrade && yay-upgrade"
alias ctf="sudo docker start ctf > /dev/null && sudo docker exec -ti ctf /bin/zsh"
